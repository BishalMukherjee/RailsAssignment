<table>
  <tr>
    <th>Name</th>
    <th>Email ID</th>
  <tr>
  <% @people.each do |p|%>
    <tr>
      <td><%= p.name%></td>
      <td><%= p.email%></td>
      <td><%= link_to 'Show', person_path(p) %></td>
      <td><%= link_to 'Edit', edit_person_path(p) %></td>
      <td><%= link_to 'Delete', person_path(p), method: :delete, data: {confirm: "Are you sure?"} %></td>
    </tr>
  <%end%>
</table>

<h2>Enter new person details</h2>
<%= link_to 'New Form', new_person_path %>